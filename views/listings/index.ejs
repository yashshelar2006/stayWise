<% layout("/layouts/boilerplate.ejs") %>
    <!-- <h2>All Listing</h2> -->

    <style>
        #filters{
            display: flex;
            flex-wrap:wrap;
            align-items: center;
            
        }
        .filt{
            margin-right: 3rem;
            margin-top: 1.5rem;
            text-align: center;
            opacity: 0.7;
        }
        .filt:hover{
            opacity: 1;
            cursor: pointer;
            
        }
        .filt p{
            font-size: 0.9rem;
        }
        .taxInfo{
            display: none;
        }
        .tax-switch
        {
            border: 1px solid rgb(236, 95, 95);
            border-radius: 1rem;
            height: 3rem;
            padding: 1rem;
            margin-left: 4rem;
            display: flex;
            text-align: center;
        }
    </style>
     <div id="filters">
        <div class="filt">
            <div><i class="fa-solid fa-arrow-trend-up"></i></div>
            <p>Trending</p>
        </div>
        <div class="filt">
            <div><i class="fa-solid fa-tent-arrows-down"></i></div>
            <p>Camping</p>
        </div>
        <div class="filt">
            <div><i class="fa-brands fa-phoenix-framework"></i></div>
            <p>Farms</p>
        </div>
        <div class="filt">
            <div><i class="fa-solid fa-building"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filt">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filt">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lake Point</p>
        </div>
        <div class="filt">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <p>Attached Pool</p>
        </div>
        <div class="filt">
            <div><i class="fa-solid fa-ship"></i></i></div>
            <p>Boat House</p>
        </div>
        <div class="filt">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filt">
            <div><i class="fa-solid fa-landmark-dome"></i></i></div>
            <p>Dome</p>
        </div>
        
        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display After Taxes</label>
            </div>
        </div>   

     </div>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for(let data of alldata){%>
            <a href="/listings/<%= data._id %>" class="card-link">
            <div class="card col" >
                    <img src="<%= data.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem" />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= data.title %></b>
                            <br/>
                            &#8377;<%= data.price.toLocaleString("en-IN") %> /Night
                            <i class="taxInfo">&nbsp; +18% GST</i>
                        </p>
                    </div>    
            </div>
            </a>
        <%}%>
    </div>    
    <!-- <form action="/listings/new" method="get">
        <button>Create New List</button>
    </form> -->

    <!-- for making click event in tax switch botton -->
    <script>
        let taxSwitch=document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click",()=>{
            let tax=document.getElementsByClassName("taxInfo");
            for(taxinfo of tax){
                if(taxinfo.style.display!="inline"){
                    taxinfo.style.display="inline";
                }else{
                    taxinfo.style.display="none";
                }   
            }
        });
    </script>